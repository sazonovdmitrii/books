{% extends "base.html.twig" %}

{% block title %}{{ "Проектный офис Александра Данилюка и Аллы Факторович"|trans }}{% endblock %}

{% block stylesheets %}
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/style.css" rel="stylesheet">
	<link href="/css/magnific-popup.css" rel="stylesheet">
	<link href="/css/iconfont-style.css" rel="stylesheet">
	<link href="/scripts/animations/animate.css" rel="stylesheet">
	<link href="/css/bootstrap-datepicker3.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/jquery.fancybox.min.css">
	<link rel="icon" href="/images/favicons/favicon.png">
	<link rel="apple-touch-icon" href="/images/favicons/apple-touch-icon.png">
	<link rel="apple-touch-icon" sizes="72x72" href="/images/favicons/apple-touch-icon-72x72.png">
	<link rel="apple-touch-icon" sizes="114x114" href="/images/favicons/apple-touch-icon-114x114.png">
	<!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
	<!--[if lt IE 9]>
	<script src="/scripts/html5shiv.js"></script>
	<script src="/scripts/respond.min.js"></script>
	<![endif]-->
	<!--headerIncludes-->
{% endblock %}

{% block header %}
	<div id="preloader">
		<div class="loading-data"></div>
	</div>
	<nav class="navbar bg-color3">
		<div class="container-fluid">
			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
						{{'Язык'|trans}} {{ language.current()|upper }} <span class="caret"></span>
					</a>
					<ul class="dropdown-menu" role="menu">
						{% for language in languages %}
							<li>
								<a href="{{ path('locale', {locale: language}) }}" class="language" rel="{{ language }}">
									{{ language|upper }}
								</a>
							</li>
						{% endfor %}
					</ul>
				</li>
			</ul>
			<a class="navbar-brand goto" href="#">
			</a>
			<button class="round-toggle navbar-toggle menu-collapse-btn collapsed" data-toggle="collapse" data-target=".navMenuCollapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
			<div class="collapse navbar-collapse navMenuCollapse">
				<div class="login-panel"><a class="btn btn-primary" href="/projects">{{'Книги'|trans}} <i class="icon right-icon icon-download"></i></a></div>
				<ul class="nav">
					<li><a href="/">{{ 'Главная'|trans }}</a></li>
					<li><a href="/about-us">{{ 'О нас'|trans }}</a></li>
					<li><a href="/goals-and-tasks/">{{ 'Объединим усилия для нового образования'|trans }}</a></li>
					<li><a href="/contacts">{{ 'Контакты'|trans }}</a></li>

					{% for project_m in projects.getProjects() %}
						<li><a href="{{ path( 'project', {slug: project_m.url}) }}">{{ project_m.getShortTitle() }}</a></li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</nav>
{% endblock %}

{% block body %}
	<div id="wrap">
		<section id="content-half-left" style="padding-top: 15%;">
			<div class="container" style="width: 100%">
				<div class="row"style="margin: 0" >
					{{ top_block.content|raw  }}
				</div>
			</div>
			<div class="container-half container-half-right cover-bg" style="background-image:url(/images/bg115.jpg)"></div>
		</section>
		</div>
{% endblock %}

{% block footer %}
	<footer id="footer-list-2" class="bg-color3">
		<div class="container">
			<div class="row">
				<div class="col-md-8">
					<div class="row">
						<div class="col-md-3">
							<h4><a href="/about-us">{{ 'О нас'|trans }}</a></h4>
						</div>
						<div class="col-md-3">
							<h4><a href="/contacts">{{ 'Контакты'|trans }}</a></h4>
						</div>
						<div class="col-md-3">
							<h4><a href="/projects">{{ 'Проекты'|trans }}</a></h4>
						</div>
						<div class="col-md-3">
							<h4 class="mb-0">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
									{{'Язык'|trans}} {{ language.current()|upper }} <span class="caret"></span>
								</a>
								<ul class="dropdown-menu footer-dropdown-menu" role="menu">
									{% for language in languages %}
										<li>
											<a href="{{ path('locale', {locale: language}) }}" class="language" rel="{{ language }}">
												{{ language|upper }}
											</a>
										</li>
									{% endfor %}
								</ul>
							</h4>
						</div>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<footer id="footer-share" class="bg-color3">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<span class="editContent">E-mail: <a href="mailto:admin@daaf2020.com">admin@daaf2020.com</a></span><br>
					<span class="editContent">© 2020 {{ 'Проектный офис Александра Данилюка и Аллы Факторович'|trans}}</span>
				</div>
			</div>
		</div>
	</footer>

{% endblock %}
{% block javascripts %}
	<script src="/scripts/jquery-1.11.2.min.js"></script>
	<script src="/scripts/jquery.fancybox.min.js"></script>
	<script src="/scripts/bootstrap.min.js"></script>
	<script src="/scripts/jquery.validate.min.js"></script>
	<script src="/scripts/smoothscroll.js"></script>
	<script src="/scripts/jquery.smooth-scroll.min.js"></script>
	<script src="/scripts/placeholders.jquery.min.js"></script>
	<script src="/scripts/jquery.magnific-popup.min.js"></script>
	<script src="/scripts/jquery.counterup.min.js"></script>
	<script src="/scripts/waypoints.min.js"></script>
	<script src="/scripts/video.js"></script>
	<script src="/scripts/bigvideo.js"></script>
	<script src="/scripts/animations/wow.min.js"></script>
	<script src="/scripts/jquery.jCounter-0.1.4.js"></script>
	<script src="/scripts/bootstrap-datepicker.min.js"></script>
	<script src="/scripts/audio.min.js"></script>
	<script src="/scripts/goodshare.min.js"></script>
	<script src="/scripts/custom.js"></script>
{% endblock %}